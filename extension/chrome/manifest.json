{
  "manifest_version": 3,
  "name": "AppWhistler - Truth Ratings for Apps",
  "version": "1.0.0",
  "description": "Instant truth ratings for any app mentioned on X/Twitter. See verified scores, red flags, and community notes.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.appwhistler.org/*"
  ],
  "background": {
    "service_worker": "background/serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content/injectWhistleButton.js",
        "content/overlayTruthPanel.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/whistle-16.png",
      "48": "assets/whistle-48.png",
      "128": "assets/whistle-128.png"
    }
  },
  "icons": {
    "16": "assets/whistle-16.png",
    "48": "assets/whistle-48.png",
    "128": "assets/whistle-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.appwhistler.org"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "content/styles.css"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}
