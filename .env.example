# AppWhistler Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appwhistler
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# JWT Authentication
# IMPORTANT: Use strong, random secrets in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_minimum_32_characters

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Optional: Error Monitoring (Sentry)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Optional: Database Alternative (Supabase)
SUPABASE_URL=
SUPABASE_KEY=

# Optional: Redis for Job Queue (leave empty to use in-memory fallback)
REDIS_URL=redis://localhost:6379

# Optional: Email Service (SendGrid)
SENDGRID_API_KEY=

# Optional: AI Fact-Checking (HuggingFace)
HUGGINGFACE_API_KEY=

# Optional: IPFS Storage (Pinata)
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Optional: Blockchain (Ethereum)
INFURA_PROJECT_ID=
ALCHEMY_API_KEY=
PRIVATE_KEY=

# Optional: OAuth2 (Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
