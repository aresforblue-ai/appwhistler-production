# Backend Environment Variables Example
# Copy this file to .env in the backend directory

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appwhistler
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Authentication
# IMPORTANT: Generate strong secrets in production!
JWT_SECRET=generate_a_strong_random_secret_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=generate_another_strong_random_secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Redis (Optional)
# REDIS_URL=redis://localhost:6379

# Optional Services
# SENTRY_DSN=
# SENDGRID_API_KEY=
# HUGGINGFACE_API_KEY=
