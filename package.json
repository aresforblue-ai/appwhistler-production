{
  "name": "appwhistler",
  "version": "0.1.0",
  "description": "Open-source AI-powered app recommender combating disinformation",
  "main": "src/backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/backend/server.js",
    "client": "cd src/frontend && npm start",
    "build": "cd src/frontend && npm run build",
    "test": "jest --coverage",
    "scrape": "node src/scraper/ethicalScraper.js",
    "deploy:contract": "hardhat run scripts/deploy.js --network goerli",
    "audit:sql": "node scripts/audit-sql.js"
  },
  "keywords": [
    "truth-tech",
    "fact-checking",
    "ai",
    "blockchain",
    "open-source"
  ],
  "author": "Tyler Hughes <your-email@example.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/appwhistler.git"
  },
  "dependencies": {
    "@huggingface/inference": "^2.6.4",
    "@pinata/sdk": "^2.1.0",
    "@sendgrid/mail": "^8.1.6",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "puppeteer": "^21.6.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.6.2",
    "uuid": "^9.0.1",
    "web3": "^4.3.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.3",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "glob": "^10.4.5",
    "hardhat": "^2.19.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
